<Page x:Class="Projeto_Educa_Sonho_Meu.Paginas.CadastrarFuncionario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projeto_Educa_Sonho_Meu.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CadastrarFuncionario">

    <Grid Background="White" Margin="0,0,-20,-87">

        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <!--PILARES-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!--nomes-->
        
        <Border Grid.Row="0" Grid.ColumnSpan="4" Background="#b6f4e6" Margin="15" CornerRadius="10 0 0 0" >
            <!--TextBlock Text="Cadastro de Turmas" FontSize="30" Padding="15 0" VerticalAlignment="Center" /-->
            <TextBox Margin="4,4,4,0" Background="Transparent" Text="Cadastro de Funcionario" FontSize="30"/>
        </Border>
        
        <!--<Grid Background="#b6f4e6" Grid.ColumnSpan="4" Margin="0 18">
            <TextBlock Text="Cadastrar Alunos" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Grid>-->
       

        <!--NOME-->
        <Grid Grid.Row="1" Grid.Column="0" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Nome:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

            </StackPanel>
        </Grid>


        <!--UF-->

        <Grid Grid.Row="3" Grid.Column="0" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="UF:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>


        <!--NUMERO-->

        <Grid Grid.Row="4" Grid.Column="0" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Numero:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--RG-->
        <Grid Grid.Row="1" Grid.Column="1" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="RG:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--FUNÇÃO-->
        <Grid Grid.Row="2" Grid.Column="0" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Função:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--SALA-->
        <Grid Grid.Row="2" Grid.Column="1" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Sala:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--CIDADE-->
        <Grid Grid.Row="3" Grid.Column="1" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Cidade:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--CPF-->
        <Grid Grid.Row="1" Grid.Column="2" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="CPF:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="42" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--CELULAR-->
        <Grid Grid.Row="2" Grid.Column="2" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Celular:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--CEP-->
        <Grid Grid.Row="3" Grid.Column="2" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Cep:"/>
                </Border>

                <TextBox Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--CTPS-->
        <Grid Grid.Row="1" Grid.Column="3" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="CTPS:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="190" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--BAIRRO-->
        <Grid Grid.Row="3" Grid.Column="3" Margin="4">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Bairro:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="200" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Button Grid.Row="6" Grid.Column="1" Height="42" Margin="20,15,10,36" Width="111" BorderBrush="Transparent"  Background="#c6ece1" HorizontalAlignment="Right" >

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Salvar" FontSize="25" Margin="5"></TextBlock>
                <Image Source="/Imagens/salvar.png" Width="20" Margin="5 11 0 5" ></Image>
            </StackPanel>

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="9"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Page>

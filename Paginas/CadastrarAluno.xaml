<Page x:Class="Projeto_Educa_Sonho_Meu.Paginas.CadastrarAluno"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projeto_Educa_Sonho_Meu.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CadastrarAluno">
    

    <Grid  Background="White">
        <!--Esse Grid define em quantas parte a tela sera dividida horizontalmente
    sendo dividido em duas parte, um usando 20% da tela, e a outra usando 80% da tela-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <!--Esse Grid define em quantas parte a tela sera dividida verticalmente
    sendo dividido em duas parte, um sendo proporcional ao Titulo, e a outra usando o resto da tela-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>
        <!--Define a cor de fundo do Titulo da pagina e a fonte-->
        <Grid Background="#b6f4e6" Grid.ColumnSpan="2">
            <TextBlock Text="Cadastrar Alunos" FontSize="20" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        



        <!-- Label e combobox do page para consertar -->        
       
        <Grid Grid.Column="1" Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>


            <TextBlock Text="Prioridade" Grid.Row="0" Grid.Column="0"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5"/>
            
            
            <TextBlock Text="Nome" Grid.Row="1" Grid.Column="0"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5"/>
            
            
            <TextBlock Text="RG" Grid.Row="2" Grid.Column="0"/>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="5"/>
            
            
            <TextBlock Text="CPF" Grid.Row="2" Grid.Column="2"/>
            <TextBox Grid.Row="2" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="Sexo" Grid.Row="3" Grid.Column="0"/>
            <TextBox Grid.Row="3" Grid.Column="1" Margin="5"/>
            
            
            <TextBlock Text="Data Nascimento" Grid.Row="3" Grid.Column="2"/>
            <TextBox Grid.Row="3" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="Masculino" Grid.Row="4" Grid.Column="0"/>
            <TextBlock Text="Diabetico" Grid.Row="4" Grid.Column="1"/>
            <TextBlock Text="Beneficio" Grid.Row="4" Grid.Column="2"/>
            <TextBox Grid.Row="4" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="Nacionalidade" Grid.Row="5" Grid.Column="0"/>
            <TextBox Grid.Row="5" Grid.Column="1" Margin="5"/>
            
            
            <TextBlock Text="Naturalidade" Grid.Row="5" Grid.Column="2"/>
            <TextBox Grid.Row="5" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="Nis" Grid.Row="5" Grid.Column="0"/>
            <TextBox Grid.Row="5" Grid.Column="0" Margin="5"/>
            
            
            <TextBlock Text="Brasileiro" Grid.Row="6" Grid.Column="0"/>
            <TextBlock Text="Cidade" Grid.Row="6" Grid.Column="2"/>
            <TextBox Grid.Row="6" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="Cep" Grid.Row="6" Grid.Column="0"/>
            <TextBox Grid.Row="6" Grid.Column="0" Margin="5"/>
            
            
            <TextBlock Text="Estado" Grid.Row="7" Grid.Column="0"/>
            <TextBox Grid.Row="7" Grid.Column="1" Margin="5"/>
            
            
            <TextBlock Text="Bairro" Grid.Row="7" Grid.Column="2"/>
            <TextBox Grid.Row="7" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="Logradouro" Grid.Row="8" Grid.Column="2"/>
            <TextBox Grid.Row="8" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="Rondinia" Grid.Row="8" Grid.Column="0"/>
            <TextBlock Text="Numero" Grid.Row="8" Grid.Column="1"/>
            <TextBox Grid.Row="8" Grid.Column="0" Margin="5"/>
            
            
            <TextBlock Text="Escola" Grid.Row="9" Grid.Column="0"/>
            <TextBox Grid.Row="9" Grid.Column="1" Margin="5"/>
            
            
            <TextBlock Text="Série" Grid.Row="9" Grid.Column="2"/>
            <TextBox Grid.Row="9" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="EE.EF.M Aulio Ferrei" Grid.Row="10" Grid.Column="0"/>
            <TextBlock Text="Periodo" Grid.Row="10" Grid.Column="2"/>
            <TextBox Grid.Row="10" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="Sitima" Grid.Row="11" Grid.Column="0"/>
            <TextBlock Text="Matutino" Grid.Row="11" Grid.Column="2"/>
            <TextBlock Text="Parecer Social:" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3" Margin="0 10 0 0"/>
            <TextBlock Text="sdmacki maskom saklorem" Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="3" Margin="0 10 0 0" TextWrapping="Wrap"/>
            <TextBlock Text="Responsável pelo Aluno" Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="3" Margin="0 10 0 0" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Nome" Grid.Row="15" Grid.Column="0"/>
            <TextBox Grid.Row="15" Grid.Column="1" Margin="5"/>
            
            
            <TextBlock Text="RG" Grid.Row="15" Grid.Column="2"/>
            <TextBox Grid.Row="15" Grid.Column="2" Margin="5"/>
            
            <TextBlock Text="CPF" Grid.Row="16" Grid.Column="2"/>
            <TextBox Grid.Row="16" Grid.Column="2" Margin="5"/>
            
            
            <TextBlock Text="Telefone" Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2"/>
            <TextBox Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"/>
            
            
            <TextBlock Text="Telefone Fixo" Grid.Row="17" Grid.Column="0"/>
            <TextBox Grid.Row="17" Grid.Column="1" Margin="5"/>
            
            
            <TextBlock Text="Telefone para Recado" Grid.Row="17" Grid.Column="2"/>
            <TextBox Grid.Row="17" Grid.Column="2" Margin="5"/>
            
            
        </Grid>

        <!-- Botão Salvar do page tem que consertar-->
        <Button Content="Salvar" FontSize="15" FontWeight="Bold" Grid.Column="0" Grid.Row="10" Margin="0 0 10 10" VerticalAlignment="Bottom" Width="300" Height="auto"/>
    
    </Grid>
</Page>

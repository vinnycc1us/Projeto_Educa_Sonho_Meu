<Page x:Class="Projeto_Educa_Sonho_Meu.Paginas.CadastrarRecursoFinanceiro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projeto_Educa_Sonho_Meu.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CadastrarRecursoFinanceiro">

    <Grid Background="#f0ffff">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
       
        </Grid.RowDefinitions>


        <Border Grid.Row="0" Grid.ColumnSpan="4" Background="#b6f4e6" Margin="15,15,10,42" CornerRadius="10 0 0 0" >
            <!--TextBlock Text="Cadastro de Turmas" FontSize="30" Padding="15 0" VerticalAlignment="Center" /-->
            <TextBox Margin="10" Background="Transparent" Text="Cadastro de Recursos Financeiros" FontSize="30"/>
        </Border>


        <Grid Grid.Column="0" Grid.Row="1" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">

                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}"  Text="Doador:"/>
                </Border>


                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--Mudamça de Linha-->

        <Grid Grid.Column="1" Grid.Row="1" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">

                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}"  Text="Valor:"/>
                </Border>


                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--Mudamça de Linha-->

        <Grid Grid.Column="2" Grid.Row="1" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">

                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}"  Text="Destino do Recurso:"/>
                </Border>


                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="3" Grid.Row="1" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">

                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}"  Text="Sala Data:"/>
                </Border>


                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--Mudamça de Linha-->


        <Button Grid.Row="4" Grid.Column="0" Height="42"  Width="111" BorderBrush="Transparent"  Background="#c6ece1" >

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Salvar" FontSize="25" Margin="5"></TextBlock>
                <Image Source="/Imagens/salvar.png" Width="20" Margin="5 11 0 5" ></Image>
            </StackPanel>

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="9"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Grid.Row="4" Grid.Column="1" Height="42" Width="115" BorderBrush="Transparent"  Background="#c6ece1">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Editar" FontSize="25" Margin="5"></TextBlock>
                <Image Source="/Imagens/lapis.png" Width="20" Margin="5 11 0 5" ></Image>
            </StackPanel>


            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="9"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Grid.Row="4" Grid.Column="2" Height="42" Width="115" BorderBrush="Transparent"  Background="#c6ece1" >

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Excluir" FontSize="25" Margin="5"></TextBlock>
                <Image Source="/Imagens/lixeira.png" Width="20" Margin="5 11 0 5" ></Image>
            </StackPanel>

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="9"/>
                </Style>
            </Button.Resources>
        </Button>


    </Grid>
</Page>

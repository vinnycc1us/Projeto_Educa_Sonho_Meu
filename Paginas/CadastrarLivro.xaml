<Page x:Class="Projeto_Educa_Sonho_Meu.Paginas.CadastrarLivro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projeto_Educa_Sonho_Meu.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CadastrarLivro">

    <Grid Background="#e6f6fb">
        <!--GRID-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- Nome -->
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="5">
            <TextBlock Text=" Cadastro do Livro" FontFamily="arial" FontSize="30" Background="#e6f6fb" Opacity="0.5" TextAlignment="Center" 
  VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="0" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Nome:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Codigo:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Valor:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Numeros de Pag:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>
        <!---->
        <Grid Grid.Row="3" Grid.Column="0" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Editora:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="0" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Area de Aplicação:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Ano de Publicação:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Descrição:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="2" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Autor:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="2" Margin="5">
            <StackPanel Width="auto" Height="auto" Margin="0 0 5 0">
                <Border Style="{StaticResource LabelBorder}">
                    <TextBlock Style="{StaticResource LabelText}" Text="Ano de Impressão:"/>
                </Border>

                <TextBox  Padding="0" FontSize="15" Width="250" Height="50" HorizontalAlignment="Left">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="0 10 0 10"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>
        </Grid>

        <!--BOTÃO-->
        <Button Grid.Row="5" Grid.Column="1" Height="42" Margin="20,26,1,36" Width="111" BorderBrush="Transparent"  Background="#c6ece1" HorizontalAlignment="Center" >

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Salvar" FontSize="25" Margin="5"></TextBlock>

                <!--<Image Source="/Imagens/salvar.png" Width="20" Margin="5 11 0 5" ></Image>-->
            </StackPanel>

            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="9"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
